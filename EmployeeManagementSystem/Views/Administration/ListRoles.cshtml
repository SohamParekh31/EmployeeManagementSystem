@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "All Roles";
}

<h1>All Roles</h1>
@if (Model.Any())
{
    <a class="btn btn-primary mb-3" asp-action="CreateRole" asp-controller="Administration">Add New Role</a>
    @foreach (var item in Model)
    {

        <div class="col-md-6">
            <div class="card mb-3 ">
                <div class="card-header">
                    Role Id : @item.Id
                </div>
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                </div>
                <div class="card-footer">
                    <a class="btn btn-primary" asp-route-id="@item.Id" asp-action="EditRole" asp-controller="Administration">Edit</a>
                    <a href="#" class="btn btn-primary">Delete</a>
                </div>
            </div>
        </div>
    }
}
else
{
    <div class="card">
        <div class="card-header">
            No Roles Created Yet
        </div>
        <div class="card-body">
            <h5 class="card-title">Use the button below to create a role</h5>
            <a class="btn btn-primary" style="width:auto" asp-action="CreateRole" asp-controller="Administration">Create Role</a>
        </div>
    </div>
}